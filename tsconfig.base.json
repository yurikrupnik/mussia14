{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@mussia14/backend/envs": ["libs/backend/envs/src/index.ts"],
      "@mussia14/backend/users-api": ["libs/backend/users-api/src/index.ts"],
      "@mussia14/backend/validations": [
        "libs/backend/validations/src/index.ts"
      ],
      "@mussia14/forntend/webclient-theme": [
        "libs/forntend/webclient-theme/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
