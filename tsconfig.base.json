{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@mussia14/backend/docs": ["libs/backend/docs/src/index.ts"],
      "@mussia14/backend/envs": ["libs/backend/envs/src/index.ts"],
      "@mussia14/backend/errors": ["libs/backend/errors/src/index.ts"],
      "@mussia14/backend/filters": ["libs/backend/filters/src/index.ts"],
      "@mussia14/backend/logger": ["libs/backend/logger/src/index.ts"],
      "@mussia14/backend/mongo-utils": [
        "libs/backend/mongo-utils/src/index.ts"
      ],
      "@mussia14/backend/products-api": [
        "libs/backend/products-api/src/index.ts"
      ],
      "@mussia14/backend/users-api": ["libs/backend/users-api/src/index.ts"],
      "@mussia14/backend/validations": [
        "libs/backend/validations/src/index.ts"
      ],
      "@mussia14/forntend/webclient-theme": [
        "libs/forntend/webclient-theme/src/index.ts"
      ],
      "@mussia14/shared/ts-utils": ["libs/shared/ts-utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
